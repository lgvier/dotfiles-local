# type skhd -o in a terminal and type a key; key code hex must be in upper case

# Close active application
alt - backspace : $(yabai -m window $(yabai -m query --windows --window | jq -re ".id") --close)

# open terminal
alt - return : /Applications/iTerm.app/Contents/MacOS/iTerm2

# toggle window fullscreen zoom
alt - f : yabai -m window --toggle zoom-fullscreen

# swap/focus window
alt - h : yabai -m window --focus west
alt + shift - h : yabai -m window --swap west
alt - j : yabai -m window --focus south
alt + shift - j : yabai -m window --swap south
alt - k : yabai -m window --focus north
alt + shift - k : yabai -m window --swap north
alt - l : yabai -m window --focus east
alt + shift - l : yabai -m window --swap east

# send window to monitor and follow focus
alt + shift - 0x2B : $HOME/.bin/yabai/moveWindowLeftAndFollowFocus.sh
alt + shift - 0x2F : $HOME/.bin/yabai/moveWindowRightAndFollowFocus.sh
 
# focus display
alt - 0x2B : yabai -m display --focus 1
alt - 0x2F : yabai -m display --focus 2

# resize
ctrl + alt + cmd - h : yabai -m window west --resize right:-20:0 2> /dev/null || yabai -m window --resize right:-20:0
ctrl + alt + cmd - j : yabai -m window north --resize bottom:0:20 2> /dev/null || yabai -m window --resize bottom:0:20
ctrl + alt + cmd - k : yabai -m window south --resize top:0:-20 2> /dev/null || yabai -m window --resize top:0:-20
ctrl + alt + cmd - l : yabai -m window east --resize left:20:0 2> /dev/null || yabai -m window --resize left:20:0

